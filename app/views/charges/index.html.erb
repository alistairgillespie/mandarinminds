<h1>List of Charges</h1>

<% if @mycharges.length > 0 %>

<table>
<thead><tr>
	<td>Paid On</td>
	<td>Item</td>
	<td>Amount</td>
	<td>Transaction ID</td>
</tr></thead>
<tbody>
<% @mycharges.each do |c| %>
	<tr>
		<td><%= c.created_at.in_time_zone("Perth").strftime('%D') %></td>
		<td><%= c.description %></td>
		<td><%= number_to_currency (c.amount/100.00), :precision => 2 %></td>
		<td><%= c.sale_id %></td>
	</tr>
<% end %>
</tbody>
</table>

<% else %>
<p>You have not made any purchases yet. Visit the <a href="/plans">Plans</a> page to view what's on offer.</p>
<% end %>