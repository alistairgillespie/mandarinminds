<%= form_tag buy_path(@plan) do %>
  <article>
  	<strong>Confirm Your Purchase</strong>
  	<p>Seller: Mandarin Minds Pty. Ltd. Incorporated Professional Name</p>
  	<p>Buyer: <%= "#{current_user.firstname} #{current_user.lastname}" %></p>
  	<p>Mailing Address: <%= current_user.email %></p>
  	<p>Product: <%= @plan.name %></p>

    <label class="amount">
      <span>Amount: $<%= @plan.price %></span>
    </label>
  </article>

  <form action="/charge" method="POST">
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-image="/images/footerlogo.png"
            data-name="Mandarin Minds"
            data-description="<%= @plan.name %>"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-email="<%= current_user.email %>"          
            data-amount="<%= @plan.price * 100 %>"
            data-allow-remember-me="false"
            data-label="Open Checkout">
    </script>
  </form>
<% end %>