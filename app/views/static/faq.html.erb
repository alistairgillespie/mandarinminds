$('#faq .fa-plus').show();
$('#faq .answer').hide();

$('#faq .question').click(function(){
	$(this).find('.fa-plus').toggle();
	$(this).find('.fa-minus').toggle();
	$(this).next().toggle();
});</script>
</div>