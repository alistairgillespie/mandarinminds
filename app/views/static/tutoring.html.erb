  <meta name="description" content="Mandarin Minds offers competitively priced tutoring services for all levels of learning.">
<% end %>

<% if user_signed_in? %>
	<div class="container-fluid">
<% else %>
	<div class="container">
<% end %>
  <div class="row">

	<div class="welcome jumbotron">
			<%= image_tag asset_path("branding/bigfoot.png") %> 
	        <h2>Differentiate yourself in a competitive workplace.</h2>
	        <p class="lead">No Mandarin? No problem! Our teachers will guide you on your learning experience from the very beginning.</p>
	        <p><a data-toggle="modal" data-target="#signup" class="btn btn-lg btn-primary" >Get started today</a></p>
	</div>
	<div class="features jumbotron">
		<a style="padding-top: 100px;" name="whatwedo"></a>

		<div class="row service">
			<div class="col-md-7 descriptor live-lessons">
				<h3 class="title">Live lessons online</h3>
				<p class="lead">Improve your Mandarin from the comfort of your home or on your mobile device. Simply select a teacher and schedule lessons using our online timetable.</p>
	     
			</div>
			<div class="col-md-5 icon">
	        	<%= image_tag asset_path("circle-icons/video.png"), class:"action" %>
			</div>
		</div>
		
		<div class="row service">
			<div class="col-md-7 descriptor eBooks">
