<%= form_for @post, html: { class: "form-horizontal", style: "display:none;", id: "new-post-form" } do |f| %>
  <div class="modal-body">
    <ul class="errors"></ul>
    <div class="control-group">
      <%= f.label :title, class:"control-label" %>
      <div class="controls">
        <%= f.text_field :title, size: "60x1", id: "title-input", :autocomplete => :off %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :body, class: "control-label" %>
      <div class="controls">
        <%= f.text_area :body, size: "80x10", id: "body-input", :autocomplete => :off %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn btn-primary", id: "cancel-post", data: {dismiss: "modal"} %>
  </div>
<% end %>
